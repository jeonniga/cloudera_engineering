    CREATE DATABASE scm DEFAULT CHARARCTER SET utf8 DEFAULT COLLATE utf8_general_ci;
    GRANT ALL ON scm.* TO  'scm'@'%' IDENTIFIED BY 'ytglobal@3400';
    CREATE DATABASE scm DEFAULT CHARARCTER SET utf8 DEFAULT COLLATE utf8_general_ci;
    GRANT ALL ON scm.* TO  'scm'@'%' IDENTIFIED BY 'ytglobal@3400';
    CREATE DATABASE scm DEFAULT CHARARCTER SET utf8 DEFAULT COLLATE utf8_general_ci;
    GRANT ALL ON scm.* TO  'scm'@'%' IDENTIFIED BY 'ytglobal@3400';
    
